{
    "name": "stayallive/php-saml",
    "description": "OneLogin PHP SAML Toolkit",
    "license": "MIT",
    "autoload": {
        "classmap": [
            "lib/Saml",
            "lib/Saml2"
        ]
    },
    "require": {
        "php": ">=7.0",
        "ext-openssl": "*",
        "ext-dom": "*",
        "robrichards/xmlseclibs": "dev-master@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "6.0.*",
        "satooshi/php-coveralls": "1.0.1",
        "sebastian/phpcpd": "*",
        "phploc/phploc": "*",
        "pdepend/pdepend" : "1.1.0",
        "squizlabs/php_codesniffer": "*"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/stayallive/xmlseclibs.git"
        }
    ],
    "suggest": {
        "lib-openssl": "Install openssl lib in order to handle with x509 certs (require to support sign and encryption)",
        "ext-gettext": "Install gettext and php5-gettext libs to handle translations"
    }
}
